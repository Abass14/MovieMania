<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMania" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NavigationTheme">
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="android:background">#00ffffff</item>
    </style>
    <style name="ActiveItem">
        <item name="color">@android:color/holo_purple</item>
        <item name="itemIconTint">@android:color/holo_purple</item>
    </style>
    <style name="InactiveItem">
        <item name="color">@android:color/white</item>
    </style>
    <style name="BottomNavBackground">
        <item name="android:opacity">transparent</item>
        <item name="background">@color/black</item>
    </style>
    <style name="TabTextAppearance">
        <item name="android:textColor">@color/fading_brown</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>